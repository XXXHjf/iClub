<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/home_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".systemSettingActivity">

    <Space
        android:id="@+id/space_systemSetting_blockTop"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_systemSetting_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxWidth="30dp"
        android:src="@drawable/ic_back_left_top"
        app:layout_constraintTop_toBottomOf="@id/space_systemSetting_blockTop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.04" />

    <TextView
        android:id="@+id/tv_modifyData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="系统设置"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/space_systemSetting_blockTop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <View
        android:id="@+id/view_systemSetting_Line"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/lineColor_grey"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/tv_modifyData" />

    <View
        android:id="@+id/view_systemSetting_logout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="退出登陆"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="@id/view_systemSetting_logout"
        app:layout_constraintBottom_toBottomOf="@id/view_systemSetting_logout"
        app:layout_constraintLeft_toLeftOf="@id/view_systemSetting_logout"
        app:layout_constraintRight_toRightOf="@id/view_systemSetting_logout" />


</androidx.constraintlayout.widget.ConstraintLayout>