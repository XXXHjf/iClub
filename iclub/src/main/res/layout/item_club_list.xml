<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootView_itemClubList"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="12dp"
    android:paddingLeft="5dp"
    android:background="@color/transparent">

    <View
        android:id="@+id/view_clubList_background"
        android:layout_width="350dp"
        android:layout_height="0dp"
        android:background="@drawable/res_home_white_view_radius"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tv_clubList_clubInfo"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.85"/>

    <ImageView
        android:id="@+id/iv_clubList_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/res_circle"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toLeftOf="@id/view_clubList_background"
        app:layout_constraintTop_toTopOf="@id/view_clubList_background" />

    <TextView
        android:id="@+id/tv_clubList_clubName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="社团名称"
        android:maxLines="1"
        android:ellipsize="end"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/iv_clubList_icon"
        app:layout_constraintEnd_toEndOf="@id/view_clubList_background"
        app:layout_constraintTop_toTopOf="@id/iv_clubList_icon"
        app:layout_constraintBottom_toBottomOf="@id/iv_clubList_icon"/>

    <TextView
        android:id="@+id/tv_clubList_clubInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="社团简介社团简介社团简介社团简介社团简介社团简介社介社团简介社团简介社团简介社团简介社团简介"
        android:maxLines="3"
        android:ellipsize="end"
        android:textSize="13sp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingBottom="10dp"
        app:layout_constraintTop_toBottomOf="@id/iv_clubList_icon"
        app:layout_constraintStart_toStartOf="@id/view_clubList_background"
        app:layout_constraintEnd_toEndOf="@id/view_clubList_background" />

</androidx.constraintlayout.widget.ConstraintLayout>
