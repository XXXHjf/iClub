<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="fragments.home.Fragment_mine"
    android:background="@color/home_background">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <ImageView
            android:id="@+id/view_profile"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@color/theme_green"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <ImageView
            android:id="@+id/iv_mine_profile"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:scaleType="centerCrop"
            android:src="@drawable/res_circle"
            app:layout_constraintBottom_toBottomOf="@id/view_profile"
            app:layout_constraintLeft_toLeftOf="@id/view_profile"
            app:layout_constraintRight_toRightOf="@id/view_profile"
            app:layout_constraintTop_toTopOf="@id/view_profile"
            app:layout_constraintVertical_bias="0.151" />

        <TextView
            android:id="@+id/tv_mine_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/iv_mine_profile"
            app:layout_constraintLeft_toLeftOf="@id/view_profile"
            app:layout_constraintRight_toRightOf="@id/view_profile" />

        <TextView
            android:id="@+id/tv_mine_stuID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/tv_mine_name"
            app:layout_constraintLeft_toLeftOf="@id/view_profile"
            app:layout_constraintRight_toRightOf="@id/view_profile" />

        <View
            android:id="@+id/view_mine_myActivities"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            app:layout_constraintTop_toBottomOf="@id/view_profile" />

        <ImageView
            android:id="@+id/iv_mine_myActivities"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_mine_my_activities"
            android:adjustViewBounds="true"
            android:maxWidth="25dp"
            app:layout_constraintTop_toTopOf="@id/view_mine_myActivities"
            app:layout_constraintBottom_toBottomOf="@id/view_mine_myActivities"
            app:layout_constraintLeft_toLeftOf="@id/view_mine_myActivities"
            app:layout_constraintRight_toRightOf="@id/view_mine_myActivities"
            app:layout_constraintHorizontal_bias="0.04"/>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的活动"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginLeft="5dp"
            app:layout_constraintTop_toTopOf="@id/view_mine_myActivities"
            app:layout_constraintBottom_toBottomOf="@id/view_mine_myActivities"
            app:layout_constraintLeft_toRightOf="@id/iv_mine_myActivities" />

        <ImageView
            android:id="@+id/iv_mine_myActivities_rightArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_mine_rightarrow"
            android:adjustViewBounds="true"
            android:maxWidth="20dp"
            app:layout_constraintTop_toTopOf="@id/view_mine_myActivities"
            app:layout_constraintBottom_toBottomOf="@id/view_mine_myActivities"
            app:layout_constraintLeft_toLeftOf="@id/view_mine_myActivities"
            app:layout_constraintRight_toRightOf="@id/view_mine_myActivities"
            app:layout_constraintHorizontal_bias="0.96"/>

        <View
            android:id="@+id/view_mine_modifyData"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            app:layout_constraintTop_toBottomOf="@id/view_mine_myActivities"
            tools:layout_editor_absoluteX="0dp" />

        <ImageView
            android:id="@+id/iv_mine_modifyData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_mine_modify"
            android:adjustViewBounds="true"
            android:maxWidth="25dp"
            app:layout_constraintTop_toTopOf="@id/view_mine_modifyData"
            app:layout_constraintBottom_toBottomOf="@id/view_mine_modifyData"
            app:layout_constraintLeft_toLeftOf="@id/view_mine_modifyData"
            app:layout_constraintRight_toRightOf="@id/view_mine_modifyData"
            app:layout_constraintHorizontal_bias="0.04"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改资料"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginLeft="5dp"
            app:layout_constraintTop_toTopOf="@id/view_mine_modifyData"
            app:layout_constraintBottom_toBottomOf="@id/view_mine_modifyData"
            app:layout_constraintLeft_toRightOf="@id/iv_mine_modifyData" />

        <ImageView
            android:id="@+id/iv_mine_modifyData_rightArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_mine_rightarrow"
            android:adjustViewBounds="true"
            android:maxWidth="20dp"
            app:layout_constraintTop_toTopOf="@id/view_mine_modifyData"
            app:layout_constraintBottom_toBottomOf="@id/view_mine_modifyData"
            app:layout_constraintLeft_toLeftOf="@id/view_mine_modifyData"
            app:layout_constraintRight_toRightOf="@id/view_mine_modifyData"
            app:layout_constraintHorizontal_bias="0.96"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/home_background"
            app:layout_constraintTop_toBottomOf="@id/view_mine_myActivities"
            app:layout_constraintBottom_toTopOf="@id/view_mine_modifyData" />

        <View
            android:id="@+id/view_mine_systemSettings"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            app:layout_constraintTop_toBottomOf="@id/view_mine_modifyData"
            tools:layout_editor_absoluteX="0dp" />

        <ImageView
            android:id="@+id/iv_mine_systemSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_mine_system_settings"
            android:adjustViewBounds="true"
            android:maxWidth="25dp"
            app:layout_constraintTop_toTopOf="@id/view_mine_systemSettings"
            app:layout_constraintBottom_toBottomOf="@id/view_mine_systemSettings"
            app:layout_constraintLeft_toLeftOf="@id/view_mine_systemSettings"
            app:layout_constraintRight_toRightOf="@id/view_mine_systemSettings"
            app:layout_constraintHorizontal_bias="0.04"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="系统设置"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginLeft="5dp"
            app:layout_constraintTop_toTopOf="@id/view_mine_systemSettings"
            app:layout_constraintBottom_toBottomOf="@id/view_mine_systemSettings"
            app:layout_constraintLeft_toRightOf="@id/iv_mine_systemSettings" />

        <ImageView
            android:id="@+id/iv_mine_systemSettings_rightArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_mine_rightarrow"
            android:adjustViewBounds="true"
            android:maxWidth="20dp"
            app:layout_constraintTop_toTopOf="@id/view_mine_systemSettings"
            app:layout_constraintBottom_toBottomOf="@id/view_mine_systemSettings"
            app:layout_constraintLeft_toLeftOf="@id/view_mine_systemSettings"
            app:layout_constraintRight_toRightOf="@id/view_mine_systemSettings"
            app:layout_constraintHorizontal_bias="0.96"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/home_background"
            app:layout_constraintTop_toBottomOf="@id/view_mine_modifyData"
            app:layout_constraintBottom_toTopOf="@id/view_mine_systemSettings" />





    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>