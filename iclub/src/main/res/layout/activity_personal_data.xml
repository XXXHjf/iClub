<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/home_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".personalDataActivity">

    <Space
        android:id="@+id/space_personalData_blockTop"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_personalData_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxWidth="30dp"
        android:src="@drawable/ic_back_left_top"
        app:layout_constraintTop_toBottomOf="@id/space_personalData_blockTop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.04" />

    <TextView
        android:id="@+id/tv_modifyData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="修改资料"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/space_personalData_blockTop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <View
        android:id="@+id/view_personalData_Line"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/lineColor_grey"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/tv_modifyData" />

    <Space
        android:id="@+id/space_personalData_stuInfo"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:layout_constraintTop_toBottomOf="@id/view_personalData_Line" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="学生信息"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/space_personalData_stuInfo"
        app:layout_constraintTop_toTopOf="@id/space_personalData_stuInfo"
        app:layout_constraintVertical_bias="0.85"
        app:layout_constraintLeft_toLeftOf="@id/space_personalData_stuInfo"
        app:layout_constraintRight_toRightOf="@id/space_personalData_stuInfo"
        app:layout_constraintHorizontal_bias="0.04" />

    <View
        android:id="@+id/view_personalData_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/space_personalData_stuInfo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="姓名"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="@id/view_personalData_name"
        app:layout_constraintBottom_toBottomOf="@id/view_personalData_name"
        app:layout_constraintLeft_toLeftOf="@id/view_personalData_name"
        app:layout_constraintRight_toRightOf="@id/view_personalData_name"
        app:layout_constraintHorizontal_bias="0.04" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="胡加法"
        android:background="@color/white"
        android:textSize="18sp"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        app:layout_constraintTop_toTopOf="@id/view_personalData_name"
        app:layout_constraintBottom_toBottomOf="@id/view_personalData_name"
        app:layout_constraintLeft_toLeftOf="@id/view_personalData_name"
        app:layout_constraintRight_toRightOf="@id/view_personalData_name"
        app:layout_constraintHorizontal_bias="0.96" />

    <View
        android:id="@+id/view_personalData_stuID"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/view_personalData_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="学号"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="@id/view_personalData_stuID"
        app:layout_constraintBottom_toBottomOf="@id/view_personalData_stuID"
        app:layout_constraintLeft_toLeftOf="@id/view_personalData_stuID"
        app:layout_constraintRight_toRightOf="@id/view_personalData_stuID"
        app:layout_constraintHorizontal_bias="0.04" />

    <TextView
        android:id="@+id/tv_personalData_stuID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="32101046"
        android:background="@color/white"
        android:textSize="18sp"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        app:layout_constraintTop_toTopOf="@id/view_personalData_stuID"
        app:layout_constraintBottom_toBottomOf="@id/view_personalData_stuID"
        app:layout_constraintLeft_toLeftOf="@id/view_personalData_stuID"
        app:layout_constraintRight_toRightOf="@id/view_personalData_stuID"
        app:layout_constraintHorizontal_bias="0.96" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/home_background"
        app:layout_constraintTop_toBottomOf="@id/view_personalData_name"
        app:layout_constraintBottom_toTopOf="@id/view_personalData_stuID" />

    <View
        android:id="@+id/view_personalData_college"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/view_personalData_stuID" />

    <TextView
        android:id="@+id/tv_personalData_collegeHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="学院"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="@id/view_personalData_college"
        app:layout_constraintBottom_toBottomOf="@id/view_personalData_college"
        app:layout_constraintLeft_toLeftOf="@id/view_personalData_college"
        app:layout_constraintRight_toRightOf="@id/view_personalData_college"
        app:layout_constraintHorizontal_bias="0.04" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxWidth="25dp"
        android:layout_marginLeft="1dp"
        android:src="@drawable/ic_join_club_writable"
        app:layout_constraintLeft_toRightOf="@id/tv_personalData_collegeHint"
        app:layout_constraintTop_toTopOf="@id/tv_personalData_collegeHint"
        app:layout_constraintBottom_toBottomOf="@id/tv_personalData_collegeHint" />


    <Spinner
        android:id="@+id/spinner_college"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:textAlignment="viewEnd"
        android:paddingRight="0dp"
        android:entries="@array/college"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/view_personalData_college"
        app:layout_constraintBottom_toBottomOf="@id/view_personalData_college"
        app:layout_constraintLeft_toLeftOf="@id/view_personalData_college"
        app:layout_constraintRight_toRightOf="@id/view_personalData_college"
        app:layout_constraintHorizontal_bias="0.96" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/home_background"
        app:layout_constraintTop_toBottomOf="@id/view_personalData_stuID"
        app:layout_constraintBottom_toTopOf="@id/view_personalData_college" />

    <View
        android:id="@+id/view_personalData_major"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/view_personalData_college" />

    <TextView
        android:id="@+id/tv_personalData_majorHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="专业班级"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="@id/view_personalData_major"
        app:layout_constraintBottom_toBottomOf="@id/view_personalData_major"
        app:layout_constraintLeft_toLeftOf="@id/view_personalData_major"
        app:layout_constraintRight_toRightOf="@id/view_personalData_major"
        app:layout_constraintHorizontal_bias="0.04" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxWidth="25dp"
        android:layout_marginLeft="1dp"
        android:src="@drawable/ic_join_club_writable"
        app:layout_constraintLeft_toRightOf="@id/tv_personalData_majorHint"
        app:layout_constraintTop_toTopOf="@id/tv_personalData_majorHint"
        app:layout_constraintBottom_toBottomOf="@id/tv_personalData_majorHint" />

    <EditText
        android:id="@+id/et_personalData_major"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:hint="请输入专业班级"
        android:maxEms="10"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/black"
        android:background="@color/white"
        android:textSize="18sp"
        android:selectAllOnFocus="true"
        app:layout_constraintBottom_toBottomOf="@id/view_personalData_major"
        app:layout_constraintHorizontal_bias="0.961"
        app:layout_constraintLeft_toLeftOf="@id/view_personalData_major"
        app:layout_constraintRight_toRightOf="@id/view_personalData_major"
        app:layout_constraintTop_toTopOf="@id/view_personalData_major"
        app:layout_constraintVertical_bias="0.541" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/home_background"
        app:layout_constraintTop_toBottomOf="@id/view_personalData_college"
        app:layout_constraintBottom_toTopOf="@id/view_personalData_major" />

    <Space
        android:id="@+id/space_personalData_block_basicInfo"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:layout_constraintTop_toBottomOf="@id/view_personalData_major" />

    <TextView
        android:id="@+id/tv_personalData_baseInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="基本信息"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/space_personalData_block_basicInfo"
        app:layout_constraintTop_toTopOf="@id/space_personalData_block_basicInfo"
        app:layout_constraintVertical_bias="0.85"
        app:layout_constraintLeft_toLeftOf="@id/space_personalData_block_basicInfo"
        app:layout_constraintRight_toRightOf="@id/space_personalData_block_basicInfo"
        app:layout_constraintHorizontal_bias="0.04" />

    <View
        android:id="@+id/view_personalData_nickname"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/space_personalData_block_basicInfo" />

    <TextView
        android:id="@+id/tv_personalData_nickNameHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="昵称"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/view_personalData_nickname"
        app:layout_constraintHorizontal_bias="0.042"
        app:layout_constraintLeft_toLeftOf="@id/view_personalData_nickname"
        app:layout_constraintRight_toRightOf="@id/view_personalData_nickname"
        app:layout_constraintTop_toTopOf="@id/view_personalData_nickname" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxWidth="25dp"
        android:layout_marginLeft="1dp"
        android:src="@drawable/ic_join_club_writable"
        app:layout_constraintLeft_toRightOf="@id/tv_personalData_nickNameHint"
        app:layout_constraintTop_toTopOf="@id/tv_personalData_nickNameHint"
        app:layout_constraintBottom_toBottomOf="@id/tv_personalData_nickNameHint" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxWidth="25dp"
        android:layout_marginLeft="1dp"
        android:src="@drawable/ic_join_club_writable"
        app:layout_constraintLeft_toRightOf="@id/tv_personalData_majorHint"
        app:layout_constraintTop_toTopOf="@id/tv_personalData_majorHint"
        app:layout_constraintBottom_toBottomOf="@id/tv_personalData_majorHint" />

    <EditText
        android:id="@+id/et_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="请输入昵称"
        android:gravity="right"
        android:maxEms="10"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/black"
        android:background="@color/white"
        android:textSize="18sp"
        android:selectAllOnFocus="true"
        app:layout_constraintTop_toTopOf="@id/view_personalData_nickname"
        app:layout_constraintBottom_toBottomOf="@id/view_personalData_nickname"
        app:layout_constraintLeft_toLeftOf="@id/view_personalData_nickname"
        app:layout_constraintRight_toRightOf="@id/view_personalData_nickname"
        app:layout_constraintHorizontal_bias="0.96" />


    <View
        android:id="@+id/view_personalData_sex"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/view_personalData_nickname" />

    <TextView
        android:id="@+id/tv_personalData_sexHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="性别"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="@id/view_personalData_sex"
        app:layout_constraintBottom_toBottomOf="@id/view_personalData_sex"
        app:layout_constraintLeft_toLeftOf="@id/view_personalData_sex"
        app:layout_constraintRight_toRightOf="@id/view_personalData_sex"
        app:layout_constraintHorizontal_bias="0.04" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxWidth="25dp"
        android:layout_marginLeft="1dp"
        android:src="@drawable/ic_join_club_writable"
        app:layout_constraintLeft_toRightOf="@id/tv_personalData_sexHint"
        app:layout_constraintTop_toTopOf="@id/tv_personalData_sexHint"
        app:layout_constraintBottom_toBottomOf="@id/tv_personalData_sexHint" />

    <Spinner
        android:id="@+id/spinner_sex"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"
        android:paddingRight="0dp"
        android:textColor="@color/black"
        android:entries="@array/sex"
        android:textAlignment="viewEnd"
        app:layout_constraintTop_toTopOf="@id/view_personalData_sex"
        app:layout_constraintBottom_toBottomOf="@id/view_personalData_sex"
        app:layout_constraintLeft_toLeftOf="@id/view_personalData_sex"
        app:layout_constraintRight_toRightOf="@id/view_personalData_sex"
        app:layout_constraintHorizontal_bias="0.96" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/home_background"
        app:layout_constraintTop_toBottomOf="@id/view_personalData_nickname"
        app:layout_constraintBottom_toTopOf="@id/view_personalData_sex" />

    <View
        android:id="@+id/view_personalData_phone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/view_personalData_sex" />

    <TextView
        android:id="@+id/tv_personalData_phoneHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="联系电话"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="@id/view_personalData_phone"
        app:layout_constraintBottom_toBottomOf="@id/view_personalData_phone"
        app:layout_constraintLeft_toLeftOf="@id/view_personalData_phone"
        app:layout_constraintRight_toRightOf="@id/view_personalData_phone"
        app:layout_constraintHorizontal_bias="0.04" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxWidth="25dp"
        android:layout_marginLeft="1dp"
        android:src="@drawable/ic_join_club_writable"
        app:layout_constraintLeft_toRightOf="@id/tv_personalData_phoneHint"
        app:layout_constraintTop_toTopOf="@id/tv_personalData_phoneHint"
        app:layout_constraintBottom_toBottomOf="@id/tv_personalData_phoneHint" />

    <EditText
        android:id="@+id/et_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="请输入手机号"
        android:selectAllOnFocus="true"
        android:textColor="@color/black"
        android:inputType="phone"
        android:gravity="right"
        android:maxEms="10"
        android:ellipsize="end"
        android:singleLine="true"
        android:background="@color/white"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="@id/view_personalData_phone"
        app:layout_constraintBottom_toBottomOf="@id/view_personalData_phone"
        app:layout_constraintLeft_toLeftOf="@id/view_personalData_phone"
        app:layout_constraintRight_toRightOf="@id/view_personalData_phone"
        app:layout_constraintHorizontal_bias="0.96" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/home_background"
        app:layout_constraintTop_toBottomOf="@id/view_personalData_sex"
        app:layout_constraintBottom_toTopOf="@id/view_personalData_phone" />

    <View
        android:id="@+id/view_personalData_birth"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/view_personalData_phone" />

    <TextView
        android:id="@+id/tv_personalData_birHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="出生日期"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="@id/view_personalData_birth"
        app:layout_constraintBottom_toBottomOf="@id/view_personalData_birth"
        app:layout_constraintLeft_toLeftOf="@id/view_personalData_birth"
        app:layout_constraintRight_toRightOf="@id/view_personalData_birth"
        app:layout_constraintHorizontal_bias="0.04" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxWidth="25dp"
        android:layout_marginLeft="1dp"
        android:src="@drawable/ic_join_club_writable"
        app:layout_constraintLeft_toRightOf="@id/tv_personalData_birHint"
        app:layout_constraintTop_toTopOf="@id/tv_personalData_birHint"
        app:layout_constraintBottom_toBottomOf="@id/tv_personalData_birHint" />

    <TextView
        android:id="@+id/tv_birthday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="请选择出生日期"
        android:gravity="right"
        android:textColor="@color/black"
        android:background="@color/white"
        android:textSize="18sp"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        app:layout_constraintTop_toTopOf="@id/view_personalData_birth"
        app:layout_constraintBottom_toBottomOf="@id/view_personalData_birth"
        app:layout_constraintLeft_toLeftOf="@id/view_personalData_birth"
        app:layout_constraintRight_toRightOf="@id/view_personalData_birth"
        app:layout_constraintHorizontal_bias="0.96" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/home_background"
        app:layout_constraintTop_toBottomOf="@id/view_personalData_phone"
        app:layout_constraintBottom_toTopOf="@id/view_personalData_birth" />

    <View
        android:id="@+id/view_personalData_savingChanges"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="保存修改"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="@id/view_personalData_savingChanges"
        app:layout_constraintBottom_toBottomOf="@id/view_personalData_savingChanges"
        app:layout_constraintLeft_toLeftOf="@id/view_personalData_savingChanges"
        app:layout_constraintRight_toRightOf="@id/view_personalData_savingChanges" />


</androidx.constraintlayout.widget.ConstraintLayout>